
<header>
	<title>WebCampBackendNew</title>
</header>

<h1 class="Books">Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>  
<% end %>

</tbody>   
</table>



<!--投稿画面-->
<h2>New book</h2>
<!-- form_for部分 -->


<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div class="alert_alert-warning">
  	<h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!--エラーメッセージ-->


<%= form_for(@book) do |f| %>
<div class="field">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class="field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>

<br class="create"><%= f.submit 'Create Book' %></br>

<% end %>

